<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="App.Pages.PanGestureTestPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:switch="clr-namespace:IeuanWalker.Maui.Switch;assembly=IeuanWalker.Maui.Switch"
             Title="PanGestureTestPage">
    <VerticalStackLayout VerticalOptions="Center">
        <switch:CustomSwitch x:Name="theSwitch"
                             BackgroundColor="#A6A6A6"
                             HeightRequest="20"
                             HorizontalOptions="Center"
                             KnobBackgroundColor="LightGray"
                             KnobHeight="125"
                             KnobLimit="Max"
                             KnobWidth="125"
                             SwitchPanUpdate="CustomSwitch_SwitchPanUpdate"
                             Toggled="Switch_OnToggled"
                             VerticalOptions="Center"
                             WidthRequest="250">
            <switch:CustomSwitch.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </switch:CustomSwitch.StrokeShape>
            <switch:CustomSwitch.KnobStrokeShape>
                <RoundRectangle CornerRadius="62.5" />
            </switch:CustomSwitch.KnobStrokeShape>
        </switch:CustomSwitch>
    </VerticalStackLayout>
</ContentPage>